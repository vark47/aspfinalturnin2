@using Microsoft.AspNetCore.Identity
@using RealEstateFinal.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="color: black !important;">Hello @UserManager.GetUserName(User)</a>
            </li>
           
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color: black !important;">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" style="color: black !important;">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color: black !important;">Log in</a></li>
    </ul>
}
