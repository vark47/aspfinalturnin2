@model RealEstateFinal.Models.MaintenanceRequest

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h1>Are you absolutely sure you want to delete this request?</h1>


<div class="card" style="width:75%">

    <div class="card-body">
        <h1 class="card-title"> @Html.DisplayFor(model => model.Requestor)</h1>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Html.DisplayFor(model => model.PropertyAddress)</li>
        <li class="list-group-item">@Html.DisplayFor(model => model.UnitNumber)</li>
        <li class="list-group-item"> @Html.DisplayFor(model => model.Description)</li>
        <li class="list-group-item">@Html.DisplayFor(model => model.DateRequested)</li>
    </ul>
    <div class="card-body">

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-default" />
        </form>
    </div>
    <br />
    <br />
</div>
